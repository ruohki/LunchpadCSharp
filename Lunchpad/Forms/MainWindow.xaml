<Window x:Class="Lunchpad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lunchpad"
        mc:Ignorable="d"
        Title="Lunchpad" Height="640" Width="640" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <local:LaunchpadButtons Grid.Row="0" x:Name="Buttons" OnButtonPressed="Buttons_OnButtonPressed" OnButtonSwitched="Buttons_OnButtonSwitched" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Name="btnConfig" Height="32" Grid.Column="0" Click="btnConfig_Click">Config</Button>
        </Grid>
        <Button Style="{StaticResource LaunchpadKey}" Content="Button" HorizontalAlignment="Left" Margin="303,399,0,0" VerticalAlignment="Top" Width="125" Height="98"/>
    </Grid>
</Window>
